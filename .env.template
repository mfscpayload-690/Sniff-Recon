# Sniff Recon - Multi-Agent AI Configuration
# Copy this file to .env and add your API keys

# =============================================================================
# PRIMARY AI PROVIDERS
# =============================================================================

# Groq (Fast inference, free tier available)
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# OpenAI (High quality, paid service)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude (High quality, good for analysis)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# BACKUP/ALTERNATIVE PROVIDERS (Optional)
# =============================================================================

# Azure OpenAI (Enterprise option)
# AZURE_OPENAI_API_KEY=your_azure_openai_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_MODEL=gpt-35-turbo

# Google AI (Alternative option)
# GOOGLE_AI_API_KEY=your_google_ai_key_here
# GOOGLE_AI_MODEL=gemini-pro

# =============================================================================
# MULTI-AGENT SYSTEM CONFIGURATION
# =============================================================================

# Chunking configuration for large files
CHUNK_SIZE_MB=5
MAX_PACKETS_PER_CHUNK=5000

# Load balancing strategy (round_robin, weighted, fastest)
LOAD_BALANCING_STRATEGY=round_robin

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=1

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable debug logging
DEBUG_LOGGING=false

# Concurrent request limit
MAX_CONCURRENT_REQUESTS=3

# Request timeout (seconds)
REQUEST_TIMEOUT=60

# Cache responses (experimental)
ENABLE_RESPONSE_CACHE=false
CACHE_TTL_SECONDS=3600

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Input validation
MAX_QUERY_LENGTH=1000
ALLOWED_FILE_EXTENSIONS=pcap,pcapng,csv,txt

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Default output directory
OUTPUT_DIR=output

# Log file configuration
LOG_FILE=sniff_recon.log
LOG_LEVEL=INFO

# Export formats
ENABLE_JSON_EXPORT=true
ENABLE_CSV_EXPORT=true
ENABLE_PDF_EXPORT=false
